{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "lib": ["es2020"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "jest.setup.ts",
    "__mocks__",
  ]
}
